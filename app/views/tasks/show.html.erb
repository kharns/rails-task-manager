<h1><%= @task.title %></h1>

<p><%= @task.details %></p>
<p><%= @task.completed ? "The task is completed" : "This task is not completed yet" %></p>

<%= link_to "Edit this task", edit_task_path %>

<%= link_to "Delete", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>

<%= link_to "Back to My Tasks", tasks_path %>
